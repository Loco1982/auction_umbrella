<section class="phx-hero">
  <h1><%= gettext "Welcome to %{name}!", name: "Martin's page" %></h1>
  <p>Estoy aprendiendo phoenix</p>
</section>

<section>
  <ul>
    <%= for item <- @items do %>
      <li>
        <strong><%= link(item.title, to: Routes.item_path(@conn, :show, item)) %></strong>: <%= item.description %>
      </li>
    <% end %>
  </ul>
</section>
